{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",

    "baseUrl": "./",
    "outDir": "./dist/",

    "strict": true,

    // "types": ["react", "react-dom", "jest", "node"],
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,

    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests", "dist"]
}
